<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#7470be"
    android:weightSum="1">



    <fragment
        android:name="com.example.keshavdulal.a14_simple_drawing.MyFragment"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:id="@+id/fragment"
        tools:layout="@layout/my_fragment" />

    <fragment
        android:name="com.example.keshavdulal.a14_simple_drawing.MyFragment1"
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:id="@+id/fragment2"
        tools:layout="@layout/my_fragment1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECORD"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#aeb7d2"
        android:textColor="#bf050b" />


</RelativeLayout>